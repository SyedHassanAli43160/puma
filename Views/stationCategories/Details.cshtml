@model List<puma.Models.stationMaster>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>stationCategory</h4>
    <hr />
    

    <table style="width:100%" class="table table-bordered">
        <tr>
            <th>Name:</th>
            <td>@Model[0].Name</td>
        </tr>
        <tr>
            <th>Area:</th>
            <td>@Model[0].area</td>
        </tr>
        <tr>
            <th>City:</th>
            <td>@Model[0].city</td>
        </tr>
        <tr>
            <th>Description:</th>
            <td>@Model[0].Description</td>
        </tr>
        <tr>
            <th>Mapped Categories:</th>
            <td>
            @foreach (var item in ViewBag.categoryNames)
                {
                    <label>@item.ToString(),</label>
                }
       

               
            </td>
        </tr>
    </table>
     
           
      
    @*a*@
</div>
<div>
  
    <a asp-action="Index">Back to List</a>
</div>
